{
  "name": "react-mark-words",
  "version": "0.0.1",
  "description": "A React component for mark and highlighting words within text with flexible word boundary matching and customizable styling.",
  "license": "MIT",
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup",
    "test": "vitest"
  },
  "tsup": {
    "target": "es5",
    "entry": [
      "src/fns",
      "src/index.ts"
    ],
    "format": [
      "esm",
      "cjs"
    ],
    "noExternal": ["slice-text"],
    "dts": true,
    "clean": true,
    "sourcemap": true,
    "splitting": false
  },
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "keywords": [
    "react",
    "mark",
    "words",
    "text",
    "match",
    "highlight",
    "splitter",
    "replace",
    "regexp"
  ],
  "author": "DBL <me@banli.co>",
  "homepage": "https://github.com/hey-lee/react-mark-words",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hey-lee/react-mark-words.git"
  },
  "bugs": {
    "url": "https://github.com/hey-lee/react-mark-words/issues"
  },
  "devDependencies": {
    "@swc/core": "^1.5.7",
    "@types/react": "^19.1.0",
    "react": "^19.1.0",
    "tsup": "^8.0.2",
    "typescript": "^5.7.2",
    "vitest": "^3.1.1"
  },
  "dependencies": {
    "slice-text": "^0.0.1"
  },
  "peerDependencies": {
    "react": "^19.1.0"
  }
}